<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/trip_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tripCardSecondary"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardText1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/tripCardPrimary"
                android:text="@string/cardWaitingText"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cardText2"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:background="@color/tripCardPrimary"
                android:text="@string/cardWaitingText"
                android:textAlignment="viewEnd"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardText1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/cardText1"
                app:layout_constraintTop_toTopOf="@+id/cardText1"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>


        <TextView
            android:id="@+id/cardText3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/tripCardPrimary"
            android:gravity="center"
            android:text="@string/cardWaitingText"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardText1"
            app:layout_constraintVertical_bias="1.0" />
    </LinearLayout>

</androidx.cardview.widget.CardView>